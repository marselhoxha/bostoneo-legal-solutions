<!-- Task Modal -->
<div class="modal fade" [class.show]="showTaskModal" [style.display]="showTaskModal ? 'block' : 'none'" 
     data-bs-backdrop="static" data-bs-keyboard="false">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content border-0 shadow">
      <div class="modal-header bg-info-subtle border-0">
        <h5 class="modal-title fw-bold">
          {{ isEditMode ? 'Edit Task' : 'Create New Task' }}
        </h5>
        <button type="button" class="btn-close" (click)="closeTaskModal()"></button>
      </div>
      <div class="modal-body">
        <form [formGroup]="taskForm" (ngSubmit)="saveTask()">
          <div class="row g-3">
            <div class="col-lg-8">
              <div class="mb-3">
                <label class="form-label">Task Title *</label>
                <input type="text" class="form-control" formControlName="title" 
                       placeholder="Enter task title">
                <div class="invalid-feedback" *ngIf="isFieldInvalid('title')">
                  {{ getFieldError('title') }}
                </div>
              </div>
            </div>
            <div class="col-lg-4">
              <div class="mb-3">
                <label class="form-label">Priority</label>
                <select class="form-select" formControlName="priority">
                  <option value="LOW">Low</option>
                  <option value="MEDIUM">Medium</option>
                  <option value="HIGH">High</option>
                  <option value="URGENT">Urgent</option>
                </select>
              </div>
            </div>
            <div class="col-lg-12">
              <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea class="form-control" rows="3" formControlName="description" 
                          placeholder="Enter task description"></textarea>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="mb-3">
                <label class="form-label">Task Type</label>
                <select class="form-select" formControlName="taskType">
                  <option *ngFor="let type of taskTypes" [value]="type">{{ type }}</option>
                </select>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="mb-3">
                <label class="form-label">Status</label>
                <select class="form-select" formControlName="status">
                  <option *ngFor="let status of taskStatuses" [value]="status">{{ status }}</option>
                </select>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="mb-3">
                <label class="form-label">Due Date</label>
                <input type="date" class="form-control" formControlName="dueDate">
              </div>
            </div>
            <div class="col-lg-6">
              <div class="mb-3">
                <label class="form-label">Estimated Hours</label>
                <input type="number" class="form-control" formControlName="estimatedHours" 
                       placeholder="0.0" step="0.5" min="0">
              </div>
            </div>
            <div class="col-lg-12">
              <div class="mb-3">
                <label class="form-label">Tags</label>
                <input type="text" class="form-control" formControlName="tags" 
                       placeholder="Enter tags separated by commas">
                <div class="form-text">Separate multiple tags with commas</div>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-light" (click)="closeTaskModal()">Close</button>
        <button type="button" class="btn btn-success" (click)="saveTask()" [disabled]="loading.submit">
          <span class="spinner-border spinner-border-sm me-2" *ngIf="loading.submit"></span>
          {{ isEditMode ? 'Update Task' : 'Create Task' }}
        </button>
      </div>
    </div>
  </div>
</div>

<!-- Advanced Features Panel -->
<div class="row mt-4" *ngIf="showAdvancedFeatures">
  <div class="col-lg-4" *ngIf="smartNotifications.length > 0">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">
          <i class="ri-notification-3-line me-2"></i>Smart Notifications
        </h5>
      </div>
      <div class="card-body">
        <div *ngFor="let notification of smartNotifications" class="alert" [ngClass]="{
          'alert-danger': notification.priority === 'critical',
          'alert-warning': notification.priority === 'high', 
          'alert-info': notification.priority === 'medium',
          'alert-success': notification.priority === 'low'
        }" role="alert">
          <strong>{{notification.title}}</strong><br>
          <small>{{notification.message}}</small>
          <div class="mt-2" *ngIf="notification.actionable && notification.actions">
            <button *ngFor="let action of notification.actions" 
                    class="btn btn-sm btn-outline-primary me-2">
              {{action.label}}
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-4" *ngIf="predictiveAssignments.length > 0">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">
          <i class="ri-brain-line me-2"></i>AI Assignment Suggestions
        </h5>
      </div>
      <div class="card-body">
        <div *ngFor="let prediction of predictiveAssignments" class="border rounded p-3 mb-3">
          <div class="d-flex justify-content-between align-items-center">
            <h6 class="mb-1">Task #{{prediction.taskId}}</h6>
            <span class="badge" [ngClass]="{
              'bg-success': prediction.confidence > 80,
              'bg-warning': prediction.confidence > 60,
              'bg-danger': prediction.confidence <= 60
            }">{{prediction.confidence}}%</span>
          </div>
          <p class="text-muted mb-2">{{prediction.estimatedCompletionDays}} days estimated</p>
          <button class="btn btn-sm btn-primary" (click)="applyPredictiveAssignment(prediction)">
            Apply Suggestion
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-4" *ngIf="optimizationRecommendations.length > 0">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">
          <i class="ri-lightbulb-line me-2"></i>Optimization Tips
        </h5>
      </div>
      <div class="card-body">
        <div *ngFor="let opt of optimizationRecommendations" class="border rounded p-3 mb-3">
          <h6>{{opt.title}}</h6>
          <p class="text-muted small">{{opt.description}}</p>
          <div class="mb-2">
            <span class="badge badge-outline-{{opt.impact === 'high' ? 'danger' : opt.impact === 'medium' ? 'warning' : 'info'}} me-2">
              {{opt.impact}} Impact
            </span>
            <span class="badge badge-outline-secondary">{{opt.effort}} Effort</span>
          </div>
          <button class="btn btn-sm btn-success" (click)="implementOptimization(opt)">
            Implement
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Show message when no AI features are available -->
  <div class="col-12" *ngIf="smartNotifications.length === 0 && predictiveAssignments.length === 0 && optimizationRecommendations.length === 0">
    <div class="card">
      <div class="card-body text-center py-5">
        <i class="ri-robot-line text-muted" style="font-size: 3rem;"></i>
        <h5 class="mt-3 text-muted">Loading AI features...</h5>
        <p class="text-muted mb-0">AI-powered insights are being generated for this case.<br>This may take a moment when backend services are starting up.</p>
      </div>
    </div>
  </div>
</div>

<!-- Analytics Panel -->
<div class="row mt-4" *ngIf="showAnalytics">
  <div class="col-lg-6" *ngIf="currentTaskAnalytics">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">
          <i class="ri-bar-chart-line me-2"></i>Task Analytics
        </h5>
      </div>
      <div class="card-body">
        <div class="row text-center">
          <div class="col-6">
            <div class="border-end">
              <h4 class="text-primary mb-1">{{currentTaskAnalytics.totalTasks}}</h4>
              <p class="text-muted mb-0">Total Tasks</p>
            </div>
          </div>
          <div class="col-6">
            <h4 class="text-success mb-1">{{currentTaskAnalytics.completedTasks}}</h4>
            <p class="text-muted mb-0">Completed</p>
          </div>
        </div>
        <div class="row text-center mt-3">
          <div class="col-6">
            <div class="border-end">
              <h4 class="text-warning mb-1">{{currentTaskAnalytics.avgCompletionTime}}d</h4>
              <p class="text-muted mb-0">Avg Completion</p>
            </div>
          </div>
          <div class="col-6">
            <h4 class="text-info mb-1">{{currentTaskAnalytics.efficiency}}%</h4>
            <p class="text-muted mb-0">Efficiency</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-6" *ngIf="performanceMetrics.length > 0">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">
          <i class="ri-line-chart-line me-2"></i>Team Performance
        </h5>
      </div>
      <div class="card-body">
        <div *ngFor="let metric of performanceMetrics.slice(0, 3)" class="d-flex justify-content-between align-items-center mb-3">
          <div>
            <h6 class="mb-1">{{metric.userName}}</h6>
            <small class="text-muted">{{metric.tasksCompleted}} tasks completed</small>
          </div>
          <span class="badge" [ngClass]="{
            'bg-success': metric.overallRating > 80,
            'bg-warning': metric.overallRating > 60,
            'bg-danger': metric.overallRating <= 60
          }">{{metric.overallRating}}/100</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Show message when no analytics are available -->
  <div class="col-12" *ngIf="!currentTaskAnalytics && performanceMetrics.length === 0">
    <div class="card">
      <div class="card-body text-center py-5">
        <i class="ri-bar-chart-line text-muted" style="font-size: 3rem;"></i>
        <h5 class="mt-3 text-muted">Loading analytics...</h5>
        <p class="text-muted mb-0">Performance analytics are being calculated for this case.<br>This may take a moment when backend services are starting up.</p>
      </div>
    </div>
  </div>
</div>

<!-- Modal Backdrop -->
<div class="modal-backdrop fade" [class.show]="showTaskModal" *ngIf="showTaskModal"></div>