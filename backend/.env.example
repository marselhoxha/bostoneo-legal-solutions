# =============================================================================
# BOSTONEO SOLUTIONS - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================================

# =============================================================================
# DATABASE
# =============================================================================
DB_URL=jdbc:mysql://127.0.0.1:3306/bostoneosolutions
DB_USERNAME=root
DB_PASSWORD=your-secure-password

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate a secure 256-bit key: openssl rand -base64 32
JWT_SECRET=your-256-bit-secret-key-here

# =============================================================================
# ENCRYPTION
# =============================================================================
# Generate secure keys: openssl rand -base64 32
ENCRYPTION_SECRET=your-encryption-secret-key
ENCRYPTION_SALT=your-encryption-salt

# =============================================================================
# OPENAI API
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key

# =============================================================================
# TWILIO (SMS/WhatsApp)
# =============================================================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=
TWILIO_ENABLED=true
TWILIO_MULTI_TENANT=true

# =============================================================================
# BOLDSIGN (E-Signatures)
# =============================================================================
BOLDSIGN_API_KEY=your-boldsign-api-key
BOLDSIGN_API_URL=https://api.boldsign.com/v1
BOLDSIGN_WEBHOOK_SECRET=
BOLDSIGN_ENABLED=true
BOLDSIGN_DEFAULT_EXPIRY_DAYS=30
BOLDSIGN_REMINDER_DAYS=7,3,1

# =============================================================================
# STRIPE (Payments)
# =============================================================================
STRIPE_API_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================================================
# COURT LISTENER (Legal Research)
# =============================================================================
COURTLISTENER_API_KEY=your-courtlistener-api-key

# =============================================================================
# REDIS (Caching)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# SERVER
# =============================================================================
SERVER_PORT=8085
SPRING_PROFILES_ACTIVE=dev

# =============================================================================
# EMAIL CONFIG
# =============================================================================
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_ID=your_email@example.com
EMAIL_PASSWORD=your_email_password
VERIFY_EMAIL_HOST=http://localhost:8085

# =============================================================================
# UI CONFIG
# =============================================================================
UI_APP_URL=http://localhost:4200
